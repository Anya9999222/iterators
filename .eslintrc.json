{
  "env": {
    "browser": true,
    "es6": true,
    "jest": true
  },
  "extends": "airbnb-base",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "no-new": 0,
    "no-restricted-syntax": [
      "error", 
      "WithStatement"
    ],
    "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }]
  }
}